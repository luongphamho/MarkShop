@model IEnumerable<MarkShop.Models.ChiTietHoaDon>

@{
    ViewBag.Title = "QuanLiDonHang";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}

@if (Model.Count() > 0)
{
    <div class="layout-page-manage">
        <h3 class="text-center pb-4 font-weight-bold" data-aos="flip-right">Quản lí đơn hàng</h3>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Mã HD</th>
                    <th>Mã SP</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Mã KH</th>
                    <th>Ngày đặt</th>
                    <th>Ngày giao</th>
                    <th>Tình trạng</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            DateTime ngayDat = DateTime.Parse(item.MaHdNavigation.NgayDat.ToString());
                            DateTime ngayGiao = DateTime.Parse(item.MaHdNavigation.NgayGiao.ToString());
                        }
                        <td>@item.MaHd</td>
                        <td>@item.MaSp</td>
                        <td>@item.SoLuong</td>
                        <td>@String.Format("{0:0,0}", item.DonGia)</td>
                        <td>@item.MaHdNavigation.MaKh</td>
                        <td>@ngayDat.ToShortDateString()</td>
                        <td>@ngayGiao.ToShortDateString()</td>
                        @if (item.MaHdNavigation.TinhTrang == false)
                        {
                            <td style="width:155px">Chưa thanh toán</td>
                            @*<td style="width:70px"><button class="btn btn-info btnDuyetDH" data-mahd="@item.MaHd">Duyệt</button></td>*@
                            <td style="width:70px"><a href="@Url.Action("DuyetDonHang", "ThemXoaSua", new { @MaHd = @item.MaHd })" class="btn btn-info btnDuyetDH">Duyệt</a></td>
                            @*<td style="width:70px"><button class="btn btn-danger btnHuyDH" data-mahd="@item.MaHd">Huỷ</button></td>*@
                            <td style="width:70px"><a href="@Url.Action("HuyDH", "ThemXoaSua", new { @MaHd = @item.MaHd })" class="btn btn-info btnDuyetDH">Hủy</a></td>
                        }
                        else
                        {
                            <td style="width:155px">Đã thanh toán</td>
                            <td></td>
                            <td></td>
                        }
                    </tr>
                            }
            </tbody>
        </table>
        <h3 class="font-weight-bold mt-5">Tổng doanh thu: @String.Format("{0:0,0}", ViewBag.TongDoanhThu) VNĐ</h3>
    </div>
                            }
                            else
                            {
                                <h1 class="text-center mb-3 font-weight-bold" data-aos="flip-right">Chưa có đơn hàng nào</h1>
                            }
